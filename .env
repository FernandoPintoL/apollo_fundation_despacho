# Apollo Gateway Configuration
NODE_ENV=development
PORT=4000
ENABLED_SERVICES=autentificacion,despacho,websocket,decision,ml_despacho

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Subgraph URLs (Para Docker, usar nombres de servicio de docker-compose)
MS_WEBSOCKET_URL=http://websocket:4004/graphql
MS_AUTENTIFICACION_URL=http://ms-autentificacion:9000/graphql
MS_DESPACHO_URL=http://ms-despacho:9000/graphql
MS_DECISION_URL=http://ms-decision:9000/graphql
MS_ML_DESPACHO_URL=http://ml-despacho:9000/graphql
MS_RECEPCION_URL=http://ms-recepcion:9000/graphql

# Service Configuration
MS_AUTH_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=10000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
