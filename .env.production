# ============================================
# Apollo Gateway Production Configuration
# ============================================
NODE_ENV=production
PORT=4000
DEBUG=false

# ============================================
# Enabled Services (comma-separated list)
# ============================================
# Options: autentificacion, despacho, websocket, decision, ml_despacho
ENABLED_SERVICES=autentificacion,despacho,websocket,decision,ml_despacho

# ============================================
# JWT & Security Configuration
# ============================================
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=24h
API_KEY_ADMIN=${API_KEY_ADMIN}

# ============================================
# Subgraph URLs - Kubernetes/Docker Network
# ============================================
# En Kubernetes, usar nombres de servicios del cluster
# En Docker, usar nombres de servicios del compose
MS_AUTENTIFICACION_URL=http://ms-autentificacion:9000/graphql
MS_DESPACHO_URL=http://ms-despacho:9000/graphql
MS_WEBSOCKET_URL=http://ms-websocket:4004/graphql
MS_DECISION_URL=http://ms-decision:8002/graphql
MS_ML_DESPACHO_URL=http://ms-ml-despacho:5000/graphql
MS_ML_RECEPCION_URL=http://ms-ml-recepcion:8080/api/graphql

# ============================================
# Authentication & Timeout
# ============================================
MS_AUTH_TIMEOUT=5000
SERVICE_TIMEOUT=10000

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=${CORS_ORIGIN}
CORS_CREDENTIALS=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Service Health Check
# ============================================
HEALTH_CHECK_INTERVAL=30000
INTROSPECTION_POLL_INTERVAL=10000

# ============================================
# Security Headers
# ============================================
HELMET_ENABLED=true
CSP_ENABLED=true

# ============================================
# Resilient Gateway Configuration
# ============================================
# Permitir inicio sin servicios disponibles
GATEWAY_RESILIENT_MODE=true
GATEWAY_START_TIMEOUT=30000

# ============================================
# Tracing & Monitoring
# ============================================
APOLLO_TELEMETRY_DISABLED=false
APOLLO_KEY=${APOLLO_KEY}
APOLLO_GRAPH_ID=${APOLLO_GRAPH_ID}
APOLLO_GRAPH_VARIANT=production
